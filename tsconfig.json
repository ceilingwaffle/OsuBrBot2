{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2017"],
    "types": ["reflect-metadata", "node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "declaration": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*.*"]
}
